<%= form_with(scope: :session, url: login_path, local: true) do |form| %> 

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "Enter your email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= form.submit "sign in" %>
  </div>

<% end %> 