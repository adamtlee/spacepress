<h1>Users Index</h1>

<table>
    <thead>
        <tr>Username</tr>
        <tr>Email</tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.username %>
                <td><%= user.email %></td>
                <td><%= link_to "View profile", user %></td>
                <% if logged_in? && user == current_user %>  
                    <td><%= link_to "Edit profile", edit_user_path(user) %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Sign up", signup_path%>

